{
  "name": "big-crossfilter",
  "version": "0.4.0",
  "description": "Big data crossfilter",
  "main": "build/big-crossfilter.js",
  "module": "build/src/index",
  "types": "build/src/index.d.ts",
  "scripts": {
    "start:flights": "parcel flights/index.html",
    "start:flights-mapd": "parcel flights-mapd/index.html",
    "start:weather": "parcel weather/index.html",
    "start": "npm run start:flights",
    "clean": "rm -rf dist && rm -rf .cache && rm -rf build",
    "build": "tsc && rollup -c",
    "prepublishOnly": "npm run build",
    "build:demos": "parcel build --public-url '/big-crossfilter/' flights/index.html flights-mapd/index.html weather/index.html",
    "deploy:demos": "npm run clean && npm run build:demos && gh-pages -d dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uwdata/big-crossfilter.git"
  },
  "author": "Dominik Moritz",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/uwdata/big-crossfilter/issues"
  },
  "homepage": "https://github.com/uwdata/big-crossfilter#readme",
  "dependencies": {
    "@apache-arrow/es2015-esm": "^0.3.1",
    "@mapd/connector": "^4.0.1",
    "@types/node": "^10.5.4",
    "cwise": "^1.0.10",
    "d3": "^5.5.0",
    "ndarray": "^1.0.18",
    "ndarray-ops": "^1.2.2",
    "ndarray-prefix-sum": "^1.0.0",
    "premonish": "^1.0.4",
    "vega-lib": "^4.2.0",
    "vega-statistics": "^1.2.1",
    "vega-typings": "^0.3.36"
  },
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/jest": "^23.3.1",
    "@types/ndarray": "1.0.6",
    "gh-pages": "^1.2.0",
    "jest": "^23.4.2",
    "node-sass": "^4.9.2",
    "parcel-bundler": "1.9.7",
    "prettier": "^1.14.0",
    "rollup": "^0.63.4",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "ts-jest": "^23.0.1",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "<rootDir>/build",
      "src"
    ]
  }
}
